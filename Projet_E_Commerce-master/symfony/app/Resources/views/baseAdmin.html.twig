<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link href='{{ asset("assets/plugins/bootstrap/css/bootstrap.min.css") }}' rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('/font-awesome/css/font-awesome.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('/perfect-scrollbar/dist/css/perfect-scrollbar.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/styleDashbaord .css') }}"/>
    <link rel="shortcut icon" href="{{ asset('dashbaordImages/favicon.png') }}"/>
</head>
<body>
<div class=" container-scroller">
    <!--Navbar-->
    <nav class="navbar bg-primary-gradient col-lg-12 col-12 p-0 fixed-top navbar-inverse d-flex flex-row">
        <div class="bg-white text-center navbar-brand-wrapper" style="height: 50px">
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-center">
            <ul class="navbar-nav ml-lg-auto d-flex align-items-center flex-row">
                <li class="nav-item">
                    <a class="nav-link" href="/"><i class="fa fa-th"> Retour au site</i></a>
                </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right hidden-lg-up align-self-center" type="button" data-toggle="offcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    <!--End navbar-->
    <div class="container-fluid">
        <div class="row row-offcanvas row-offcanvas-right">
            <nav class="bg-white sidebar sidebar-fixed sidebar-offcanvas" id="sidebar">
                <div class="user-info">
                    <img style="background-color: #1e88e5;padding: 3px" src="{{ asset('assets/images/logo-light-icon.png') }}" alt="">
                    <p class="name">La Séréniter du code</p>
                    <p class="designation">Manager</p>
                    <span class="online"></span>
                </div>
                <ul class="nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/admin/index">
                            <!-- <i class="fa fa-dashboard"></i> -->
                            <img src="{{ asset('dashbaordImages/icons/1.png') }}" alt="">
                            <span class="menu-title">Accueil</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/categories">
                            <i class="fa fa-th-list" aria-hidden="true"></i>
                            <span class="menu-title">Categories</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/new_article">
                            <!-- <i class="fa fa-wpforms"></i> -->
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            <span class="menu-title">New Article</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/users_list">
                            <!-- <i class="fa fa-calculator"></i> -->
                            <i class="fa fa-users" aria-hidden="true"></i>
                            <span class="menu-title">Users</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/orders">
                            <!-- <i class="fa fa-table"></i> -->
                            <i class="fa fa-eur" aria-hidden="true"></i>
                            <span class="menu-title">Orders</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- SIDEBAR ENDS -->
            <div class="content-wrapper">
                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                <div class="alert alert-info alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    {{ message|raw }}
                                </div>

                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                {% block body %}{% endblock %}
            </div>
        </div>

    </div>
</div>

<footer class="footer">
    <div class="container-fluid clearfix">
              <span class="float-right">
                  <a href="#">Star Admin</a> &copy; 2017
              </span>
    </div>
</footer>
{% block javascripts %}{% endblock %}
<script src="{{ asset('jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('tether/dist/js/tether.min.js') }}"></script>
<script src="{{ asset('bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('chart.js/dist/Chart.min.js') }}"></script>
<script src="{{ asset('perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js') }}"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAt-yMhzaEQDf744YN9gn-CGHMZyUdVA7M&callback=initMap" async defer></script>
<script src="{{ asset('js/off-canvas.js') }}"></script>
<script src="{{ asset('js/hoverable-collapse.js') }}"></script>
<script src="{{ asset('js/misc.js') }}"></script>
<script src="{{ asset('js/chart.js') }}"></script>
<script src="{{ asset('js/maps.js') }}"></script>
</body>
</html>
