{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">

            <div class="col-lg-3">

                <h1 class="my-4">VicPen</h1>
                <div class="list-group">
                    {% for cat in cat %}
                    <a href="/result_cat/{{ cat.id_cat }}" class="list-group-item">{{ cat.nameCat }}</a>
                    {% endfor %}
                </div>

            </div>
            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>

                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item ">
                            <img class="d-block img-fluid" src="{{ asset('assets/images/nin.jpg') }}" width="900" height="350" alt="First slide">
                            <div class="carousel-caption">
                                <h2 style="color: white !important;background-color: #8c8c8c80;" >Bientot en vente</h2>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="{{ asset('assets/images/1.jpg') }}" width="900" height="350" alt="First slide">
                            <div class="carousel-caption">
                                <h2 style="color: white !important; background-color: #8c8c8c80;" ><a style="color: white !important;" href="fiche_prod/55">Actuellement en vente</a></h2>
                            </div>
                        </div>
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="{{ asset('assets/images/livraison-gratuite.jpg') }}" width="900" height="350" alt="First slide">
                            <div class="carousel-caption" >
                                <h2 style="color: white !important;background-color: #8c8c8c80;" >Sur <tout></tout> le magasin</h2>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            <div class="row">
                {% for res in image %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="/fiche_prod/{{ res.id_product }}" name="id" value="{{ res.id_product }}">
                                {% if res.image is null %}
                                    <img class="card-img-top" src="https://vide-greniers.org/images/picture/traitementPhoto.png"  width="359" height="200" alt="">
                                {% else %}
                                    <img class="card-img-top" src={{ res.image }} width="250" height="200" alt="">
                                {% endif %}
                                <div class="card-body">
                                    <h4 class="card-title" style="color: #0275d8;">
                                       {{ res.name }}
                                    </h4>

                                    <h5>{{ res.price_TTC  }}â‚¬</h5>
                                </div>
                            </a>

                        </div>

                    </div>
                {% endfor %}


            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

    </div>
    <!-- /.container -->


{% endblock %}

