{% extends "::baseAdmin.html.twig" %}

{% block title %}Admin NewArticle{% endblock %}

{% block body %}
<h1>NewArticle page</h1>
        <form id="myform" action="new_article/go" method="post" enctype="multipart/form-data">
            <div class="form-group">
                 <label for="">Nom du produit: <input class="form-control" type="text" name="name" required></label>
            </div>
            <div class="form-group">
                <label for="">Categorie
                    <select class="form-control" name="category" id="">
                        {% for category in category %}
                        <option value="{{ category.id_Cat }}">{{ category.nameCat }}</option>
                        {% endfor %}
                    </select>
                </label>
            </div>
            <div class="form-group">
               <label>Description<textarea name="describ"></textarea></label>
            </div>
            <div class="form-group">
                <label>Caractéristique<textarea name="feature"></textarea></label>
            </div>
            <div class="form-group">
                <label for="">color : <input class="form-control" type="text" name="color"></label>
            </div>
            <div class="form-group">
                <label for="">Poid (KG): <input class="form-control" type="number" name="weigth" required></label>
            </div>
            <div class="form-group">
                <label for="">PRIX HT (€)(TVA 20% ajoutée automatiquement): <input class="form-control" type="number" name="price_HT" required></label>
            </div>
            <div class="form-group">
                <label for="">Stock (par unitée): <input class="form-control" type="number" value="1"  min="0" name="stock" required></label>
            </div>
            <div class="form-group">
                <p>En vente ?</p>
                <label for="">oui<input class="form-control" type="radio" name="statut" value=1 ></label>
                <label for="">non<input class="form-control" type="radio" name="statut" value=0 ></label>
            </div>
            <div class="form-group">
                <label for="">Image(s)<br>
                    <input type="file" name="image[]" multiple><br>
                </label>
            </div>
             <input class="btn btn-primary" type="submit" value="créé">
        </form>
{% endblock %}
        {% block javascripts %}
            <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
            <script src="{{ asset('js/wyswig.js') }}"></script>


        {% endblock %}

