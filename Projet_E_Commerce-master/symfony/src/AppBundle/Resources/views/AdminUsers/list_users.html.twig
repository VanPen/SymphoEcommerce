{% extends "::baseAdmin.html.twig" %}

{% block title %}AppBundle:AdminUsers:listUsers{% endblock %}

{% block body %}
<h1>Welcome to the AdminUsers:listUsers page</h1>
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Hoverable Table</h5>
                <table class="table table-hover">
                    <thead>
                    <tr class="">
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td><a href="/admin/user/{{ user.id }}"><strong>{{ user.firstName }}</strong></a></td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        {% for role in user.roles %}
                        <td>{{ role }}</td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}
